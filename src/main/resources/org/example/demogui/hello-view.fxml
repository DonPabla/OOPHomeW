    <TextField fx:id="text2" style="-fx-background-color: #000000; -fx-text-fill: #ffffff; -fx-border-color: #21b548;" />
    <Label fx:id="label1" text="BMI: " style="-fx-text-fill: #ffffff;" />
    <Button mnemonicParsing="false" onAction="#onClickButton" text="Calculate BMI" style="-fx-background-color: #e00000; -fx-text-fill: #ffffff;" />
    <Label fx:id="Result" style="-fx-text-fill: #ffffff;" />
</VBox>
