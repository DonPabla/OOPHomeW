<VBox prefHeight="297.0" prefWidth="314.0" spacing="20.0" style="-fx-border-color: #ffffff; -fx-background-color: #000000;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demogui.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <MenuBar style="-fx-background-color: #333333;" prefHeight="0.0" prefWidth="273.0">
        <menus>
            <Menu mnemonicParsing="false" text="File" style="-fx-text-fill: #ffffff;">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#closeItem" text="Close" />
                    <SeparatorMenuItem mnemonicParsing="false" />
                    <MenuItem mnemonicParsing="false" onAction="#clearFields" text="Clear" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help" style="-fx-text-fill: #ffffff;">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#showHelp" text="How to use" />
                </items>
            </Menu>
        </menus>
    </MenuBar>
    <Label prefHeight="18.0" prefWidth="311.0" text="Введите вес (кг)" style="-fx-text-fill: #ffffff;" />
